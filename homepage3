                  <h1 style="text-align: left;">Create countdown timer</h1>


            <form action="result.html" method="GET" onsubmit="setCountdown()">
      <label for="days">Days:</label>
      <input type="number" id="days" name="days" required>

      <label for="hours">Hours:</label>
      <input type="number" id="hours" name="hours" required>

      <label for="minutes">Minutes:</label>
      <input type="number" id="minutes" name="minutes" required>

      <label for="seconds">Seconds:</label>
      <input type="number" id="seconds" name="seconds" required>
      <br>
      <br>

      <button type="submit">Start Countdown</button>
    </form>
  </div>
  <script>
  function setCountdown() {
    const days = document.getElementById('days').value;
    const hours = document.getElementById('hours').value;
    const minutes = document.getElementById('minutes').value;
    const seconds = document.getElementById('seconds').value;
  
    const totalSeconds = (parseInt(days) * 24 * 60 * 60) + (parseInt(hours) * 60 * 60) + (parseInt(minutes) * 60) + parseInt(seconds);
  
    localStorage.setItem('countdown', totalSeconds);
  }
  </script>

