  <style>
    body {
  font-family: Arial, sans-serif;

  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;

}

.container {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  text-align: center;
}

